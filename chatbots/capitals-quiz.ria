<?xml version="1.0" encoding="UTF-8"?>
<route>
	<info>
		<entry_id>1</entry_id>
		<locale>EN</locale>
		<ai_model>
			<name>ChatBot</name>
			<guidelines>You are an AI assistant that is animating a countries/capitals quiz. Keep the quiz running and the user engaged. Use a natural and positive language. Respond in one paragraph.</guidelines>
			<script></script>
			<params>
				<param>
					<key>default_error_msg</key>
					<value>The chat ended due to an unexpected error!</value>
				</param>
				<param>
					<key>ollama_model</key>
					<value>gemma3:4b</value>
				</param>
				<param>
					<key>ollama_max_tokens</key>
					<value>512</value>
				</param>
				<param>
					<key>ollama_temperature</key>
					<value>0.5</value>
				</param>
			</params>
		</ai_model>
	</info>
	<questions>
		<question>
			<id>5</id>
			<bounds>589;15;100;100</bounds>
			<message>You&#39;ve got {:points:} right answers.&lt;br&gt;Enter &#39;yes&#39; to continue the quiz with an AI-Model...</message>
			<response>
				<condition>
					<type>text:equal</type>
					<validation>yes</validation>
					<on_success>
						<message>The quiz will continue in a moment...</message>
						<action>switch_to_ai</action>
						<value></value>
						<move>0</move>
					</on_success>
					<on_error>
						<message>The quiz is terminated.</message>
						<action>end</action>
						<value></value>
						<move>0</move>
					</on_error>
					<script>
					</script>
				</condition>
			</response>
		</question>
		<question>
			<id>4</id>
			<bounds>430;15;100;100</bounds>
			<message>What is the capital of Spain?</message>
			<response>
				<condition>
					<type>text:equal</type>
					<validation>Madrid</validation>
					<on_success>
						<message>Good answer! Score: {:points:} Let&#39;s move to the next one.</message>
						<action>variable:operation</action>
						<value>points=+1</value>
						<move>5</move>
					</on_success>
					<on_error>
						<message>Wrong answer! Try again...</message>
						<action>repeat</action>
						<value></value>
						<move>0</move>
					</on_error>
					<script>
					</script>
				</condition>
			</response>
		</question>
		<question>
			<id>3</id>
			<bounds>294;14;100;100</bounds>
			<message>What is the capital of the USA?</message>
			<response>
				<condition>
					<type>text:equal</type>
					<validation>Washington</validation>
					<on_success>
						<message>Good answer! Score: {:points:} &lt;br&gt;Let&#39;s move to the next one.</message>
						<action>variable:operation</action>
						<value>points=+1</value>
						<move>4</move>
					</on_success>
					<on_error>
						<message>Wrong answer! Try again...</message>
						<action>repeat</action>
						<value></value>
						<move>0</move>
					</on_error>
					<script>
					</script>
				</condition>
			</response>
		</question>
		<question>
			<id>1</id>
			<bounds>26;13;100;100</bounds>
			<message>Welcome the country/capital quiz!
Enter yes to start the quiz, other to end the chat.</message>
			<response>
				<condition>
					<type>text:equal</type>
					<validation>yes</validation>
					<on_success>
						<message>Great let&#39;s start the quiz now!</message>
						<action>variable:operation</action>
						<value>points=+0</value>
						<move>2</move>
					</on_success>
					<on_error>
						<message>The quiz is now finished.</message>
						<action>end</action>
						<value></value>
						<move>0</move>
					</on_error>
					<script>
					</script>
				</condition>
			</response>
		</question>
		<question>
			<id>2</id>
			<bounds>160;14;100;100</bounds>
			<message>What is the capital of Morocco?</message>
			<response>
				<condition>
					<type>text:equal</type>
					<validation>Rabat</validation>
					<on_success>
						<message>Good answer! Score: {:points:} &lt;br&gt;Let&#39;s move to the next one.</message>
						<action>variable:operation</action>
						<value>points=+1</value>
						<move>3</move>
					</on_success>
					<on_error>
						<message>Wrong answer! Try again...</message>
						<action>repeat</action>
						<value></value>
						<move>0</move>
					</on_error>
					<script>
					</script>
				</condition>
			</response>
		</question>
	</questions>
</route>
